<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
    <TableRow>
        <EditText
            android:id="@+id/et1"
            android:layout_span="5"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/et2"
            android:layout_span="5"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:layout_weight="1"
            android:text="0"/>
        <Button
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:text="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:text="9"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/sum"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="더하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/sub"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="빼기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/mul"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="곱하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/div"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="나누기"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tv"
            android:layout_span="5"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>